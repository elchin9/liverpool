
@{
    @model Slider
  Layout = "_AdminLayout";
    ViewData["Title"] = "Create";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Slide Yarat</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-8">
                        <form method="post" class="mt-4" enctype="multipart/form-data">

                            <div class="form-group">
                                <label asp-for="Photo">Slider-in Şəklini seçin</label>
                                <div class="uploadArea">
                                    <div class="uploadImage d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input id="uploadInput" multiple asp-for="Photo" accept="image/*" class="form-control" />
                                <span asp-validation-for="Photo" class="text-danger"></span>
                                <p class="file-view">Şəkil seçildi</p>

                            </div>

                            <input type="submit" class="btn-create" value="Yarat" />
                        </form>
                    </div>
                    <div class="col-12 col-md-4"></div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}