
@{
    @model BackgroundImages
    Layout = "_AdminLayout";
    ViewData["Title"] = "Contact";
}


<!-- Start Contact Section -->

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Arxa fon şəkillərini dəyiş</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-8">
                        <form method="post" class="mt-4" enctype="multipart/form-data">

                            <div class="form-group">
                                <label asp-for="CupPhoto">Kuboklar Səhifəsi üçün </label>
                                <div class="uploadArea">
                                    <div class="uploadImage d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input asp-for="CupPhoto" accept="image/*" class="form-control uploadInput" />
                                <span asp-validation-for="CupPhoto" class="text-danger"></span>
                                <p class="file-view">Şəkil seçildi</p>

                            </div>

                            <div class="form-group">

                                <label asp-for="SquadPhoto">Heyyət səhifəsi üçün</label>
                                <div class="uploadArea">
                                    <div class="uploadImageSecond d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input asp-for="SquadPhoto" accept="image/*" class="form-control uploadInputSecond" />
                                <span asp-validation-for="SquadPhoto" class="text-danger"></span>
                                <p class="file-view-second">Şəkil seçildi</p>

                            </div>

                            <div class="form-group">

                                <label asp-for="StadiumPhoto">Stadion səhifəsi üçün</label>
                                <div class="uploadArea">
                                    <div class="uploadImageThird d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input asp-for="StadiumPhoto" accept="image/*" class="form-control uploadInputThird" />
                                <span asp-validation-for="StadiumPhoto" class="text-danger"></span>
                                <p class="file-view-third">Şəkil seçildi</p>

                            </div>

                            <div class="form-group">

                                <label asp-for="HistoryPhoto">Klub tarixi səhifəsi üçün</label>
                                <div class="uploadArea">
                                    <div class="uploadImageFour d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input asp-for="HistoryPhoto" accept="image/*" class="form-control uploadInputFour" />
                                <span asp-validation-for="HistoryPhoto" class="text-danger"></span>
                                <p class="file-view-four">Şəkil seçildi</p>

                            </div>

                            <input type="submit" class="btn-create" value="Dəyiş" />
                        </form>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="edit-image-admin-panel">
                            <h5>Kuboklar səhifəsi üçün</h5>
                            <img src="~/images/@Model.CupPhotoURL" style="max-height: 140px;object-fit:cover;"/>
                        </div>
                        <div class="edit-image-admin-panel mt-2">
                            <h5>Heyyət səhifəsi üçün</"></h5>

                            <img src="~/images/@Model.SquadPhotoURL" style="max-height: 140px;object-fit:cover;"/>
                        </div>
                        <div class="edit-image-admin-panel mt-2">
                            <h5>Stadion səhifəsi üçün</h5>

                            <img src="~/images/@Model.StadiumPhotoURL" style="max-height: 140px;object-fit:cover;"/>
                        </div>
                        <div class="edit-image-admin-panel mt-2">
                            <h5>Klub Tarixi səhifəsi üçün</h5>

                            <img src="~/images/@Model.HistoryPhotoURL" style="max-height: 140px;object-fit:cover;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

<!-- End Contact Section -->


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



