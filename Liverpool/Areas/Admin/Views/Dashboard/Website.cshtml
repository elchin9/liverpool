
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Index";
}

<!-- MAIN CONTENT-->
<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Menu</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Shop" asp-action="Index">
                                <i class="fal fa-camera-retro"></i>
                                <p>Qaleriya</p>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-4">

                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Events" asp-action="Index">
                                <i class="fad fa-calendar-alt"></i>
                                <p>Eventlər</p>
                            </a>
                        </div>

                    </div>
                    <div class="col-12 col-md-6 col-lg-4">

                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Dashboard" asp-action="ImageIndex">
                                <i class="fad fa-images"></i>
                                <p>Background Photos</p>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-4">

                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Slider" asp-action="Index">
                                <i class="fal fa-presentation"></i>
                                <p>Slider</p>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-4">

                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Message" asp-action="Index">
                                <i class="fad fa-envelope"></i>
                                <p>Məktublar</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END MAIN CONTENT-->
