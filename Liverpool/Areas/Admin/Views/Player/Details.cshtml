
@{
    @model Player
  Layout = "_AdminLayout";
    ViewData["Title"] = "Details";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <section class="wrapper" style="padding-bottom:50px;">
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-6 news-wrapper-slider">
                            <div class="news-details-img">
                                <img src="~/images/@Model.PhotoURL">
                            </div>
                        </div>
                        <div class="col-3"></div>
                        
                        <div class="col-12 mt-4">
                            <h3>@Model.Firstname @Model.Lastname</h3>
                            <p class="mt-5">@Model.Birthday</p>
                            <p>@Model.Position.Name</p>
                            <p>@Model.Info</p>
                        </div>
                    </div>
                    <div class="nd-content">
                        
                    </div>

                    <div class="row">
                        <div class="col-12 text-center">
                            <a class="btn btn-danger mt-5" asp-action="Index">Əsas Səhifəyə qayıt</a>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

