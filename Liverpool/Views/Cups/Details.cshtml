
@{
    @model Cup
    ViewData["Title"] = "Details";
}


<section id="cup-details" style="background: url('/images/@Model.BackgroundPhotoURL');background-attachment: fixed;">
    <div class="overlay-slider"></div>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="heading-cup">
                    <h2>@Model.Place / @Model.Time</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="cup-info">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="cup-img d-flex justify-content-center">
                    <img src="~/images/cups/@Model.CupType.PhotoURL" alt="">
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="cup-p">
                    <p>@Model.Info</p>
                </div>
            </div>
        </div>
    </div>
</section>