
@{
    @model IEnumerable<News>
    Layout = null;
}

@foreach (var n in Model)
{

    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <a asp-controller="News" asp-action="Details" asp-route-id="@n.Id">
            <div class="last-content">
                <div class="last-images">
                    <img src="~/images/@n.Photos.FirstOrDefault().PhotoURL" alt="">
                    <div class="img-info">
                        <p>@n.Category.Name</p>
                    </div>
                </div>
                <div class="last-info">
                    <h4>@n.Title</h4>
                    <span>@n.Time</span>
                </div>
            </div>
        </a>

    </div>
}