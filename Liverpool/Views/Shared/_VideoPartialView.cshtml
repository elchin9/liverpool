
@{
    @model IEnumerable<Video>
    Layout = null;
}

@foreach (var v in Model)
{
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <a asp-controller="Video" asp-action="Details" asp-route-id="@v.Id">
            <div class="last-content">

                <div class="last-images">
                    <img src="~/images/@v.PhotoURL" alt="">
                    <div class="img-info">
                        <p>@v.Category.Name</p>
                    </div>
                    <i class="far fa-play-circle"></i>
                </div>
                <div class="last-info">
                    <h4>@v.Title</h4>
                    <span>@v.Time</span>
                </div>
            </div>
        </a>
    </div>
}