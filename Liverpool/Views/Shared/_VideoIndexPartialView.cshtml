@{
    @model IEnumerable<Video>
}

@foreach (var b in Model)
{
    <tr>
        <td>

            <img style="width: 150px;" src="~/images/@b.PhotoURL" class="img-thumbnail" />

        </td>
        <td>
            <p>@b.Title</p>
        </td>
        <td style="vertical-align: middle; text-align: center; color:white;">
            <a title="Ətraflı bax" asp-area="Admin" asp-controller="Video" asp-action="Details" asp-route-id="@b.Id" class="btn btn-success mt-1"><i class="fal fa-info"></i></a>
            <a title="Dəyişdir" asp-area="Admin" asp-controller="Video" asp-action="Edit" asp-route-id="@b.Id" class="btn btn-warning mt-1"><i class="fal fa-edit"></i></a>
            <a title="Sil" asp-area="Admin" asp-controller="Video" asp-action="Delete" asp-route-id="@b.Id" class="btn btn-danger mt-1"><i class="fal fa-trash"></i></a>
        </td>
    </tr>
}