
@{
    @model IEnumerable<Gallery>
    ViewData["Title"] = "Gallery";
}


<section id="news">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h3>Qaleriya</h3>
            </div>
        </div>
    </div>
</section>

<section id="gallery">
    <div class="container">
        <div class="row">

            @foreach (var p in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 p-0">
                    <div class="one-photo">
                        <img src="~/images/@p.PhotoURL" alt="">
                    </div>
                </div>
            }

        </div>
        @if (ViewBag.ImageCount > 20)
        {
            <div class="row mt-5">
                <div class="col-12 text-center">
                    <div class="btn-load-more">
                        <a href="#">Daha Çox</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="container">
        <div class="inner-slider">
            <div class="inner-slide">
                <ul class="inner-photos d-flex p-0 m-0">
                    @foreach (var p in Model)
                    {
                        <li>
                            <img src="~/images/@p.PhotoURL" alt="">
                        </li>
                    }
                </ul>
                <div class="inner-arrow-left">
                    <i class="fas fa-chevron-left"></i>
                </div>
                <div class="inner-arrow-right">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </div>
            <i class="close fas fa-times"></i>
        </div>
    </div>
</section>

