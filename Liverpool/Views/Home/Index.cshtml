@{
    @model HomeViewModel
}
<!-- Start Slider -->

<section id="slider">
    <div class="row m-0">
        <div class="col-12 p-0">
            <i class="fas fa-angle-left arrow-left position-absolute"></i>
            <div class="window">
                <ul class="mb-0 p-0 list-unstyled d-flex slider-lent">
                    @foreach (var s in Model.Sliders)
                    {
                        <li>
                            <img src="images/@s.PhotoURL">
                        </li>
                    }
                </ul>
            </div>
            <i class="fas fa-angle-right arrow-right position-absolute"></i>
        </div>
    </div>
</section>


<!-- End Slider -->

@if (Model.Videos.Count() > 0)
{
    <!-- Start Last Matches -->

    <section id="last-match">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="heading-section d-flex justify-content-between align-items-center">
                        <h2>Son İcmallar :</h2>
                        <div class="more">
                            <a asp-controller="Video" asp-action="Index">Daha Çox</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                @foreach (var v in Model.Videos)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <a asp-controller="Video" asp-action="Details" asp-route-id="@v.Id">
                            <div class="last-content">
                                <div class="last-images">
                                    <img src="images/@v.PhotoURL" alt="">
                                    <div class="img-info">
                                        <p>@v.Category.Name</p>
                                    </div>
                                    <i class="far fa-play-circle"></i>
                                </div>
                                <div class="last-info">
                                    <h4>@v.Title</h4>
                                    <span>@v.Time</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- End Last Matches -->
}


@if (Model.News.Count() > 0)
{
    <!-- Start Latest News -->

    <section id="latest-news">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="heading-section d-flex justify-content-between align-items-center">
                        <h2>Son Xəbərlər :</h2>
                        <div class="more">
                            <a asp-controller="News" asp-action="Index">Daha Çox</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                @foreach (var n in Model.News)
                {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <a asp-controller="News" asp-action="Details" asp-route-id="@n.Id">
                        <div class="last-content">
                            <div class="last-images">
                                <img src="images/@n.Photos.FirstOrDefault().PhotoURL" alt="">
                                <div class="img-info">
                                    <p>@n.Category.Name</p>
                                </div>
                            </div>
                            <div class="last-info">
                                <h4>@n.Title</h4>
                                <span>@n.Time</span>
                            </div>
                        </div>
                    </a>
                </div>
                }

            </div>
        </div>
    </section>

    <!-- End Latest News -->
}

<!-- Start Events -->

<section id="events">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-5">
                @if (Model.Event.Time > DateTime.Now)
                {
                    <div class="event-main">
                        <div class="event-content mt-4">
                            <div class="heading-event">
                                <h2>Fan Klubla oyun izlə</h2>
                            </div>
                            <div class="event-info-index">
                                <h4>@Model.Event.Title</h4>
                                <p>Matchday : @String.Format("{0:yyyy-MM-dd}", Model.Event.Time)</p>
                                <p>Toplanış yeri : @Model.Event.Place</p>
                                <p>Saat : @Model.Event.Clock</p>
                            </div>
                        </div>
                        <div class="event-map-index">
                            <iframe src="@Model.Event.Map"
                                    width="100%" height="400px" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </div>
                    </div>
                }
                else
                {
                    <div class="event-main">
                        <div class="event-content mt-4">
                            <div class="heading-event">
                                <h2>Fan Klubla oyun izlə</h2>
                            </div>
                            <div class="event-info-index">
                                <p class="m-0">Hal-hazırda yeni event yoxdur.</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-12 col-lg-7">
                <div class="league-table mt-4">
                    <div class="heading-event">
                        <h2>Turnir Cədvəli :</h2>
                        <iframe class="mt-4 mt-md-0" frameborder="0" scrolling="no" width="500" height="600"
                                src="https://www.fctables.com/england/premier-league/iframe/?type=table&lang_id=22&country=67&template=10&team=&timezone=Europe/Samara&time=12&po=1&ma=1&wi=1&dr=1&los=1&gf=1&ga=1&gd=1&pts=1&ng=1&form=0&width=500&height=700&font=Verdana&fs=12&lh=22&bg=FFFFFF&fc=333333&logo=1&tlink=1&ths=1&thb=1&thba=FFFFFF&thc=000000&bc=dddddd&hob=f5f5f5&hobc=ebe7e7&lc=333333&sh=1&hfb=1&hbc=f01d40&hfc=FFFFFF"></iframe>
                    </div>
                </div>
            </div>
        </div>
</section>

<!-- End Events -->
