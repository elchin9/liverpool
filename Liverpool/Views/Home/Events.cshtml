
@{
    @model IEnumerable<Event>
    ViewData["Title"] = "Events";
}
<section id="news">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h3>Eventlər</h3>
                <p style="font-style: italic;">Oyunlara bizimlə birlikdə bax</p>
            </div>
        </div>
    </div>
</section>

<section id="event">
    <div class="container">
        <div class="row">
            @if (Model.Where(e => e.Time > DateTime.Now).Count() > 0)
            {
                @foreach (var e in Model)
                {
                    @if (e.Time > DateTime.Now)
                    {
                        <div class="col-12">
                            <div class="one-event">
                                <div class="event-info">
                                    <h3>@e.Title</h3>
                                    <h5>Toplanış yeri : @e.Place</h5>
                                    <p>
                                        Tarix : @String.Format("{0:yyyy-MM-dd}", e.Time)
                                    </p>
                                    <p>Saat : @e.Clock</p>
                                    <p>Əlaqə : @e.Phone</p>
                                </div>
                                <div class="event-map">
                                    <iframe src="@e.Map"
                                            width="100%" height="300" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                <div class="col-6">
                    <p>Hal-hazırda event yoxdur</p>
                </div>
            }
        </div>
    </div>
</section>
