
@{
    @model VideoViewModel
    ViewData["Title"] = "Index";
}


<section id="news">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h3>İcmallar</h3>
            </div>
        </div>
    </div>
</section>

<section id="game-video">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8">
                <div class="main-video">
                    <iframe width="100%" height="450" src="@Model.OneVideo.VideoLink"
                            frameborder="0"
                            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="main-video-info">
                    <h3>@Model.OneVideo.Title</h3>
                    <h6>@Model.OneVideo.Category.Name</h6>
                    <p>
                        @Model.OneVideo.MainInfo
                    </p>
                </div>
            </div>
            @foreach (var v in Model.Videos)
            {
                if (v.Id != Model.OneVideo.Id)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <a asp-controller="Video" asp-action="Details" asp-route-id="@v.Id">
                            <div class="last-content">

                                <div class="last-images">
                                    <img src="~/images/@v.PhotoURL" alt="">
                                    <div class="img-info">
                                        <p>@v.Category.Name</p>
                                    </div>
                                    <i class="far fa-play-circle"></i>
                                </div>
                                <div class="last-info">
                                    <h4>@v.Title</h4>
                                    <span>@v.Time</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>

        @if (ViewBag.Count > 13)
        {
            <div class="row mt-5">
                <div class="col-12 text-center">
                    <div class="btn-load-more">
                        <a href="#">Daha Çox</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>