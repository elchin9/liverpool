
@{
    @model IEnumerable<Video>
    ViewData["Title"] = "Index";
}


<section id="news">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h3>İcmallar</h3>
            </div>
        </div>
    </div>
</section>

<section id="last-match">
    <div class="container">
        <div class="row">
            @foreach (var v in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <a asp-controller="Video" asp-action="Details" asp-route-id="@v.Id">
                        <div class="last-content">

                            <div class="last-images">
                                <img src="~/images/@v.PhotoURL" alt="">
                                <div class="img-info">
                                    <p>@v.Category.Name</p>
                                </div>
                                <i class="far fa-play-circle"></i>
                            </div>
                            <div class="last-info">
                                <h4>@v.Title</h4>
                                <span>@v.Time</span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>

        @if(ViewBag.Count > 12)
        {
        <div class="row mt-5">
            <div class="col-12 text-center">
                <div class="btn-load-more">
                    <a href="#">Daha Çox</a>
                </div>
            </div>
        </div>
        }
        
    </div>
</section>