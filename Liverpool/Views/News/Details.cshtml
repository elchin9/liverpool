
@{
    @model NewsViewModel
    ViewData["Title"] = "Details";
}

<!-- Start Slide Section -->

<section id="news-details">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-3"></div>
            <div class="col-12 col-md-6">
                <div class="news-details-img">
                    <i class="fas fa-angle-left arrow-left position-absolute"></i>
                    <div class="window">
                        <ul class="d-flex slider-lent">
                            @foreach (var p in Model.News.Photos)
                            {
                                <li>
                                    <img src="~/images/@p.PhotoURL">
                                </li>
                            }

                        </ul>
                    </div>
                    <i class="fas fa-angle-right arrow-right position-absolute"></i>
                </div>
            </div>
            <div class="col-12 col-md-3"></div>
            <div class="col-12">
                <div class="news-details-info">
                    <h4>@Model.News.Title</h4>
                    <p>@Model.News.MainInfo </p>
                </div>
                <div class="fb-share-button mt-3" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-size="large"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Paylaş</a></div>
            </div>
        </div>
    </div>
</section>

<!-- End Slide Section -->
<!-- Start Latest News -->

<section id="latest-news">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="heading-section d-flex justify-content-between align-items-center">
                    <h2>Son Xəbərlər :</h2>
                    <div class="more">
                        <a asp-controller="News" asp-action="Index">Daha Çox</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            @foreach (var n in Model.AllNews)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <a asp-controller="News" asp-action="Details" asp-route-id="@n.Id">
                        <div class="last-content">
                            <div class="last-images">
                                <img src="~/images/@n.Photos.FirstOrDefault().PhotoURL" alt="">
                                <div class="img-info">
                                    <p>@n.Category.Name</p>
                                </div>
                            </div>
                            <div class="last-info">
                                <h4>@n.Title</h4>
                                <span>@n.Time</span>
                            </div>
                        </div>
                    </a>                 
                </div>
            }


        </div>
    </div>
</section>

<!-- End Latest News -->

<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/tr_TR/sdk.js#xfbml=1&version=v5.0"></script>